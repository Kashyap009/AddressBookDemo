@{
    ViewData["Title"] = "Contact List";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

@using System.Data
@model DataTable

<div class="d-flex container">
    <div class="fw-bold fs-3" style="padding-top:6px">Contact List</div>
    <div class="position-relative" style="right:-806px; margin-top:1%;">
        <a asp-area="CON_Contact"  asp-controller="CON_Contact" asp-action="Add" class="btn btn-success">Add Contact</a>
    </div>
    <form class="d-flex"> <input class="form-control mr-2" style="height: 24px;position: relative;left: 648px;margin-top: 10px;margin-bottom: 10px;" id="sample_1" size="9" type="search" placeholder="Search" aria-label="Search"> </form>

</div>

<div class="col-md-8" align="right">
    <form method="post" asp-area="CON_Contact" asp-controller="CON_Contact" asp-action="Filter" style="position: relative; margin-right: -336px;">
        <label>Filter: </label>
        <input type="search" name="ContactName" class="form-control input-sm input-small input-inline" placeholder="Contact Name" value="" />
        <input type="search" name="ContactMobile" class="form-control input-sm input-small input-inline" placeholder="Contact Mobile" value="" />
        <button type="submit" class="btn btn btn-success">GO</button>
    </form>
</div>

<table class="table table-responsive table-sm table-striped table-hover table-bordered" id="sample_1">
    <thead>
        <tr>
            <th class="text-center">Action</th>
            @*@*<th class="text-center">Contact ID</th>*@
@*            <th class="align-content-center">Photo</th>
*@            <th class="text-center">Category</th>
            <th class="text-center">Name</th>
            <th class="text-center">Mobile</th>
            <th class="text-center">Email</th>
            <th class="text-center">Address</th>
            <th class="text-center">Country</th>
            <th class="text-center">State</th>
            <th class="text-center">City</th>
            @*<th class="text-center">Country ID</th>*@
            @*<th class="text-center">State ID</th>*@
            @*<th class="text-center">City ID</th>*@        
            @*<th class="text-center">Contact Category ID</th>*@
            <th class="text-center">Creation Date</th>
            <th class="text-center">Modification</th>
            

        </tr>
    </thead>
    <tbody id="sample_2">
        @foreach (DataRow dr in Model.Rows)
        {
            <tr>
                @*<td class="text-center">@dr["ContactID"]</td>*@
                <td class="d-flex justify-content-center">
                    <form method="post" asp-area="CON_Contact" asp-controller="CON_Contact" asp-action="Delete">
                        <input type="hidden" name="ContactID" value="@Convert.ToInt32(dr["ContactID"])" />
                        <button type="submit" class="btn btn-danger my-3 mx-2" onclick="return confirm('Are you sure you want to delete?')">
                            <svg xmlns="http://www.w3.org/2000/svg" width="16" height="16" fill="currentColor" class="bi bi-trash3-fill" viewBox="0 0 16 16">
                                <path d="M11 1.5v1h3.5a.5.5 0 0 1 0 1h-.538l-.853 10.66A2 2 0 0 1 11.115 16h-6.23a2 2 0 0 1-1.994-1.84L2.038 3.5H1.5a.5.5 0 0 1 0-1H5v-1A1.5 1.5 0 0 1 6.5 0h3A1.5 1.5 0 0 1 11 1.5Zm-5 0v1h4v-1a.5.5 0 0 0-.5-.5h-3a.5.5 0 0 0-.5.5ZM4.5 5.029l.5 8.5a.5.5 0 1 0 .998-.06l-.5-8.5a.5.5 0 1 0-.998.06Zm6.53-.528a.5.5 0 0 0-.528.47l-.5 8.5a.5.5 0 0 0 .998.058l.5-8.5a.5.5 0 0 0-.47-.528ZM8 4.5a.5.5 0 0 0-.5.5v8.5a.5.5 0 0 0 1 0V5a.5.5 0 0 0-.5-.5Z" />
                            </svg>
                        </button>
                    </form>
                    <form method="post" asp-area="CON_Contact" asp-controller="CON_Contact" asp-action="Add">
                        <input type="hidden" name="ContactID" value="@Convert.ToInt32(dr["ContactID"])" />
                        <button type="submit" class="btn btn-secondary my-3 mx-2" asp-action="Add" asp-area="CON_Contact" asp-controller="CON_Contact" asp-route-contactid="@Convert.ToInt32(dr["ContactID"])">
                            <svg xmlns="http://www.w3.org/2000/svg" width="16" height="16" fill="currentColor" class="bi bi-pencil-square" viewBox="0 0 16 16">
                                    <path d="M15.502 1.94a.5.5 0 0 1 0 .706L14.459 3.69l-2-2L13.502.646a.5.5 0 0 1 .707 0l1.293 1.293zm-1.75 2.456-2-2L4.939 9.21a.5.5 0 0 0-.121.196l-.805 2.414a.25.25 0 0 0 .316.316l2.414-.805a.5.5 0 0 0 .196-.12l6.813-6.814z" />
                                    <path fill-rule="evenodd" d="M1 13.5A1.5 1.5 0 0 0 2.5 15h11a1.5 1.5 0 0 0 1.5-1.5v-6a.5.5 0 0 0-1 0v6a.5.5 0 0 1-.5.5h-11a.5.5 0 0 1-.5-.5v-11a.5.5 0 0 1 .5-.5H9a.5.5 0 0 0 0-1H2.5A1.5 1.5 0 0 0 1 2.5v11z" />
                                </svg>
</button>
                    </form>
                </td>
               @* <td class="align-content-center">
                    <img src="@dr["PhotoPath"]" style="height:150px; width:150px" class="img img-responsive">
                </td>*@
                <td class="text-center">@dr["ContactCategoryName"]</td>
                <td class="text-center">@dr["ContactName"]</td>
                <td class="text-center">@dr["ContactMobile"]</td>
                <td class="text-center">@dr["ContactEmail"]</td>
                <td class="text-center">@dr["ContactAddress"]</td>
                <td class="text-center">@dr["CountryName"]</td>
                <td class="text-center">@dr["StateName"]</td>
                <td class="text-center">@dr["CityName"]</td>
                @*<td class="text-center">@dr["ContactCategoryID"]</td>*@
                <td class="text-center">@Convert.ToDateTime(dr["ContactCreationDate"]).ToString("D")</td>
                <td class="text-center">@Convert.ToDateTime(dr["ContactModification"]).ToString("D")</td>
                
            </tr>
        }
    </tbody>
</table>

@section Scripts{
    <script>
        $(document).ready(function () {
            $("#sample_1").on("keyup", function () {
                var value = $(this).val().toLowerCase();
                $("#sample_2 tr").filter(function () {
                    $(this).toggle($(this).text().toLowerCase().indexOf(value) > -1)
                });
            });
        });
    </script>
}